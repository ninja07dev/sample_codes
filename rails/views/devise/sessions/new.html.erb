<div data-controller='signIn'>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: 'form'}) do |f| %>
    <div class="form-group">
      <%= f.label :phone_number %><br />
      <%= f.phone_field :phone_number, autofocus: true, class: 'form-control', required: true, autocomplete: "Phone number" %>
    </div>
    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: 'form-control', required: true, autocomplete: "current-password" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="form-group checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Sign In", class: 'btn btn-success btn-flat m-b-30 m-t-30' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
