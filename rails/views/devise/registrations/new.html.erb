<div data-controller='signUp'>
  <%= render 'devise/shared/error_messages', resource: @company %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: 'signUp', class: 'formWidth' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class='row'>
      <%= fields_for :company do |company| %>
        <div class="form-group col-md-12 col-lg-6">
          <%= company.label :contact_person_name %><br />
          <%= company.text_field :contact_person_name, required: true, class: 'form-control', autofocus: true %>
        </div>
        <div class="form-group col-md-12 col-lg-6">
          <%= company.label :contact_person_number %><br />
          <%= company.phone_field :contact_person_number, required: true, class: 'form-control', autofocus: true %>
        </div>
        <div class="form-group col-md-12 col-lg-6">
          <%= company.label :name, 'Company Name'%><br />
          <%= company.text_field :name, required: true, class: 'form-control', autofocus: true %>
        </div>
        <div class="form-group col-md-12 col-lg-6">
          <%= company.label :email %><br />
          <%= company.email_field :email, required: true, class: 'form-control', autofocus: true, autocomplete: "email" %>
        </div>
      <%end%>
      <div class="form-group col-md-12 col-lg-6">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, required: true, class: 'form-control', autofocus: true %>
      </div>
      <div class="form-group col-md-12 col-lg-6">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, required: true, class: 'form-control', autofocus: true %>
      </div>
      <div class="form-group col-md-12 col-lg-6">
        <%= f.label :password %>
        <%= f.password_field :password, required: true, class: 'form-control', autocomplete: "new-password" %>
      </div>
      <div class="form-group col-md-12 col-lg-6">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, required: true, class: 'form-control', autocomplete: "new-password" %>
      </div>
    </div>
    <%= fields_for :company do |company| %>
      <div class="form-group">
        <div class="checkbox">
          <label class="checkboxstyle">
            <%= company.check_box :terms_and_conditions %>
            <span class="checkmark"></span>
            I agree to the <a href="" data-toggle="modal" data-target="#termsCondi" class="text-info">terms</a>
          </label>
        </div>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-success btn-flat m-b-30 m-t-30' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
