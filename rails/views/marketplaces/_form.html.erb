<div class="animated fadeIn">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header"><%= t('marketplace.add_market')%></div>
          <div class="card-body card-block">
            <div class="input-group">
              <%= form_with model: @resource, id: 'marketplace', local: true, class: 'marketplace-form' do |f| %>
                <div class="form-group">
                  <%= f.label :name %><br />
                  <%= f.phone_field :name, autofocus: true, class: 'form-control', required: true, autocomplete: "Phone number" %>
                </div>
                <div class="form-group">
                  <%= f.label :website_url %><br />
                  <%= f.text_field :website_url, value: (params.dig(:marketplace, :website_url) || @resource.website_url), class: 'form-control', placeholder: t('marketplace.add_url') ,required: true%>
                </div>
                <div class="form-group">
                  <%= f.label :image_xpath %><br />
                  <%= f.text_field :image_xpath, class: 'form-control', placeholder: t('marketplace.image_path') ,required: true%>
                </div>
                <div class="actions">
                  <%= f.submit class: 'btn btn-success btn-sm' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>