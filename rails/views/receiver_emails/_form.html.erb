<div class="animated fadeIn">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header"><%= t('receiver_email.add')%></div>
          <div class="card-body card-block">
            <div class="input-group">
              <%= form_with model: @resource, id: 'receiver_email', local: true do |f| %>
                <div class="form-group">
                  <%= f.label :name %><br />
                  <%= f.phone_field :name, autofocus: true, placeholder: t('receiver_email.add_person_name'), class: 'form-control', required: true %>
                </div>
                <div class="form-group">
                  <%= f.label :email %><br />
                  <%= f.text_field :email, class: 'form-control', placeholder: t('receiver_email.add_email'), required: true %>
                </div>
                <div class="actions">
                  <%= f.submit class: 'btn btn-success btn-sm' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>