<div class="animated fadeIn">
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header">
          <div class='row'>
            <div class="col-sm-4 title-text">
              <%= t('entity.title') %>
            </div>
            <div class="col-sm-8 text-right">
              <%= link_to new_entity_path, class: 'btn btn-sm btn-primary pull-right' do %>
                <i class="fa fa-plus"></i> <%= t('add') %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="card-body">
          <%= render 'shared/list' %>
        </div>
      </div>
    </div>
  </div>
</div>
