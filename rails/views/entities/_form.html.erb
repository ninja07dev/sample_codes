<div class="animated fadeIn">
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header"><%= get_title %></div>
        <div class="card-body card-block">
          <div class="input-group">
            <%= form_with model: @resource, id: 'entity', local: true do |f| %>
              <div class="form-group">
                <%= f.label :name %><br />
                <%= f.phone_field :name, autofocus: true, class: 'form-control', required: true, autocomplete: "Phone number" %>
              </div>
              <div class="actions">
                <%= f.submit class: 'btn btn-success btn-sm' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
