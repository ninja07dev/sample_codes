<div data-controller='product'>
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header"><%= t('product.add_product')%></div>
        <div class="card-body card-block">
          <div class="form-group">
            <%= form_with model: @resource, local: true, id: 'product' do |f| %>
              <div class="form-group">
                <%= f.label :product_url %><br />
                <%= f.text_field :product_url, value: params.dig(:product_url) || '', class: 'form-control', placeholder: t('product.add_url') ,required: true%>
              </div>
            <div class="actions">
              <%= f.submit class: 'btn btn-success btn-sm' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
