<header id="header" class="header">
  <div class="top-left">
    <div class="navbar-header">
      <%= link_to root_path, class: 'navbar-brand' do%>
        <%= image_tag('logo.png') %>
      <% end %>
      <a id="menuToggle" class="menutoggle"><i class="fa fa-bars"></i></a>
    </div>
  </div>
  <div class="top-right">
    <div class="header-menu">
      <% if policy(RequestedMarketplace.new).new? %>
        <%= link_to new_requested_marketplace_path, class: 'nav-link' do %>
          <i class="fa fa-plus fa-fw"></i> <%= t('requested_marketplace.add') %>
        <% end %>
      <% end %>
      <div class='header-left'>
        <%= link_to destroy_user_session_path, method: 'DELETE', class: 'nav-link' do %>
          <i class="fa fa-power-off fa-fw"></i> <%= t('sign_out') %>
        <% end %>
      </div>
    </div>
  </div>
</header>
